# Environment Variables for Render Deployment
# Copy these to your Render service environment variables

NODE_ENV=production
PORT=3000

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/learning_hub

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=30m
JWT_REFRESH_EXPIRY=7d

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_TTL=3600

# Google Cloud Storage (Optional - for file uploads)
GCS_PROJECT_ID=your-project-id
GCS_KEY_FILE_PATH=path/to/service-account.json
GCS_BUCKET_NAME=your-bucket-name

# CORS
CORS_ORIGIN=*

# Swagger
SWAGGER_ENABLED=false